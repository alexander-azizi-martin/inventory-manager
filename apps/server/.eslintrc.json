{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "airbnb-typescript/base"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "ignorePatterns": [
    "node_modules",
    "dist"
  ],
  "rules": {
    "linebreak-style": [
      "off"
    ],
    "import/prefer-default-export": [
      "warn"
    ],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [
          "tests/**",
          "jest.config.ts"
        ]
      }
    ],
    "import/extensions": [
      "error",
      {
        "js": "never",
        "ts": "never"
      }
    ],
    "max-classes-per-file": [
      "warn",
      1
    ]
  }
}
